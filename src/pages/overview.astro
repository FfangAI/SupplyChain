---
import Layout from '~/layouts/PageLayout.astro';
import { headerData } from '~/navigation';
import Header from '~/components/widgets/Header.astro';



/* Top Website Tab */
const metadata = {
  title: 'AI4AI - AI model evaluation and more',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Dashboard',
          href: '/dashboardv1',
        },
      ]}
      isSticky
    />
  </Fragment>

  <div class="container mx-auto px-6 py-8">
    <!-- First Row: Product Overview & Performance Summary -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
      <!-- Product Overview -->
      <div class="bg-white shadow-lg rounded-lg p-6 col-span-1 flex flex-col items-center">
        <img src="/logos/gemini-logo.jpg" alt="Gemini Logo" class="w-20 h-20 mb-4 rounded-full object-cover" />
        <h2 class="text-2xl font-semibold">Gemini</h2>
        <p class="text-sm text-gray-500">Published by Google</p>
        <div class="mt-4 flex flex-col items-center space-y-2">
          <div class="text-sm">Languages: <span class="font-medium">46</span></div>
          <div class="text-sm">Countries: <span class="font-medium">239</span></div>
          <div class="text-sm">Release Date: <span class="font-medium">March 21, 2023</span></div>
          <div class="text-sm">Rank: <span class="font-medium">#1 / 200</span></div>
        </div>
      </div>
      <!-- Performance Summary -->
      <div class="bg-white shadow-lg rounded-lg p-6 col-span-2">
        <h3 class="text-xl font-semibold mb-2">Dynamic Reflection</h3>
        <div class="flex items-baseline">
          <span class="text-4xl font-bold mr-2">90</span>
          <span class="text-sm text-green-500">Overall Score &#x25B2; +2.45%</span>
        </div>
        <!-- Example Line Chart -->
        <div class="mt-4">
          <div id="line-chart"></div>
        </div>
      </div>
    </div>
  
    <!-- Second Row: Score Subsets, Testing, News -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Score Subsets -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h3 class="text-lg font-semibold mb-4">Score Subsets</h3>
        <p class="text-green-500 font-bold mb-4">✔ Passed</p>
        <!-- Example Radar Chart -->
        <div id="radar-chart"></div>
      </div>
      
      <!-- Testing Information -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h3 class="text-lg font-semibold mb-4">What we are testing now</h3>
        <p class="text-green-500 font-bold mb-4">✔ Passed</p>
        <!-- Example Pie Chart Placeholder -->
        <div id="pie-chart"></div>
        <p class="text-center text-sm mt-2"></p>
      </div>
      
      <!-- News Section -->
      <div class="bg-white shadow-lg rounded-lg p-6">
        <h3 class="text-lg font-semibold mb-4">News</h3>
        <ul class="space-y-4">
          <li class="border-b border-gray-200 pb-4">
            <h4 class="font-medium text-blue-600">Google moves Gemini app team to DeepMind</h4>
            <p class="text-sm text-gray-500">October 17, 2024</p>
          </li>
          <li class="border-b border-gray-200 pb-4">
            <h4 class="font-medium text-blue-600">National Archives Pushes Google Gemini AI on Employees</h4>
            <p class="text-sm text-gray-500">October 17, 2024</p>
          </li>
          <li>
            <h4 class="font-medium text-blue-600">Updates offer new Gemini image resizing options.</h4>
            <p class="text-sm text-gray-500">October 15, 2024</p>
          </li>
        </ul>
        <div class="mt-4 text-right">
          <a href="#" class="text-blue-500 hover:underline">View all &rarr;</a>
        </div>
      </div>
    </div>
  </div>
</Layout>





<!-- apexcharts -->
